.e_search {
  position: relative;
  width: 588.6rpx;
}

.e_search .e_search_inp {
  background-color: #e7e7e7;
  border-radius: 10rpx;
  height: 54rpx;
  padding: 0 20rpx;
  font-size: 22rpx;
  background-position: 215rpx center;
  background-repeat: no-repeat;
  background-size: 27rpx;
  text-align: center;
  background-image: url("data:image/png;base64,");
}
.e_search .e_search_inp::-webkit-input-placeholder{
  text-align: center;
}
.e_search .e_search_inp.focus{
  text-align: left;
  background-image: none;
}
/* .e_search .e_search_inp:hover{
  text-align: left;
  background-size: 0rpx;
} */

.e_search .e_search_tip{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -55%);
  /* display: flex; */
  /* align-items: center; */
  vertical-align: middle;
}
.e_search .e_search_tip .e_search_img{
  width: 27rpx;
  height: 27rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.e_search .e_search_tip .e_search_text{
  font-size: 22rpx;
  color: #797979;
  line-height: 20rpx;
  vertical-align: middle;
}